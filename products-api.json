{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample Store server.",
        "version": "1.0.0",
        "title": "Products API Store",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "apiteam@contoso.io"
        },
        "license": {
            "name": "Apache 2.0",
